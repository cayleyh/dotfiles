## Homebrew-first path setup
PATH=/usr/local/bin:/usr/local/sbin:${PATH}

## NVM
export NVM_DIR="$HOME/.nvm"
. "/usr/local/opt/nvm/nvm.sh"

## Android
# If installed via Android Studio
export ANDROID_HOME=/Users/$USER/Library/Android/sdk
export PATH=${PATH}:$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools

# SDK Path not needed if installed via Brew

# FB Infer
PATH=${PATH}:~/Applications/infer-osx-v0.1.0/infer/infer/bin

# Go binaries, installed via Homebrew
PATH=${PATH}:/usr/local/opt/go/libexec/bin

# Anaconda
PATH=${PATH}:/usr/local/anaconda3/bin

######
export PATH
