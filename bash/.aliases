#!/bin/bash

# A lot of these ideas come from https://github.com/yyx990803/dotfiles

# make aliases sudo-able
alias sudo="sudo "

# directory navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# some ls aliases
alias ls='ls -G' # use colors
alias la="ls -A"
alias ll="ls -Al"

# git shortcuts
alias gs="git status"
alias ga="git add -A ."
alias gf="git fetch"
alias gc="git commit"
alias gb="git branch"
alias gd="git diff"
alias gco="git checkout"
alias gp="git push"
alias gl="git pull"
alias gt="git tag"
alias gm="git merge"
alias gg="git log --graph --pretty=format:'%C(bold red)%h%Creset -%C(bold yellow)%d%Creset %s %C(bold green)(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
# mine
alias ghist="git log --pretty=format:'%C(yellow)%h %Cred%ad %Creset%s -- %Cblue%an%Cgreen%d' --date=short"

# npm shortcuts that only list top-level modules
# ! overrides the line-number utility
alias ng="npm list -g --depth=0 2>/dev/null"
alias nl="npm list --depth=0 2>/dev/null"

# process finding
alias pg="pgrep -lf"

## XCode Project sorting
# Run in the Quick Capture root directory to sort the XCode project file
alias sortqcproj='perl ~/scripts/sort-Xcode-project-file.pl QuickCapture.xcodeproj/project.pbxproj'

# Development workflow shortcuts
alias fw="forever -w"
