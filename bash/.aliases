#!/bin/bash

# A lot of these ideas come from https://github.com/yyx990803/dotfiles

# make aliases sudo-able
alias sudo="sudo "

# directory navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# some ls aliases
alias ls='ls -G' # use colors
alias la="ls -Al"
alias ll="ls -Al"

# process finding
alias pg="pgrep -lf"

# git shortcuts
alias gs="git status"
alias ga="git add -A ."
alias gf="git fetch"
alias gc="git commit"
alias gb="git branch"
alias gd="git diff"
alias gco="git checkout"
alias gp="git push"
alias gl="git pull"
alias gt="git tag"
alias gm="git merge"
alias gg="git log --graph --pretty=format:'%C(bold red)%h%Creset -%C(bold yellow)%d%Creset %s %C(bold green)(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"

# npm shortcuts that only list top-level modules
# ! overrides the line-number utility
alias ng="npm list -g --depth=0 2>/dev/null"
alias nl="npm list --depth=0 2>/dev/null"

# Development workflow shortcuts
alias chrml="open /Applications/Google\ Chrome.app/ --args --allow-file-access-from-files --disable-web-security"
